<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".monitoring.StepThreeSearchFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="48dp">
            <ImageView
                    android:background="@drawable/ic_btn_back"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#111111"
                    android:lineSpacingExtra="7sp"
                    tools:text="이전"/>
        </LinearLayout>

        <View
                android:background="@color/light_beige"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>
        
        <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:lineSpacingExtra="9sp"
                        android:text="귀가 시간 설정"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#f45955"
                        android:layout_marginLeft="191dp"
                        android:gravity="right"
                        android:text="오전 12:30"/>
            </LinearLayout>

            <TimePicker
                    android:layout_width="match_parent"
                    android:timePickerMode="spinner"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content">

            </TimePicker>
        </LinearLayout>

        <View
                android:background="@color/light_beige"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:lineSpacingExtra="9sp"
                    android:text="보호자 설정"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/edit_color"
                    android:layout_marginLeft="250dp"
                    android:gravity="right"
                    android:text="편집"/>
        </LinearLayout>

        <View
                android:background="@color/light_beige"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <LinearLayout
                android:id="@+id/layout_parent_field"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <include
                    android:visibility="visible"
                    android:id="@+id/parent_1"
                    layout="@layout/item_search_parent"/>

            <include
                    android:visibility="visible"
                    android:id="@+id/parent_2"
                    layout="@layout/item_search_parent"/>

            <include
                    android:visibility="visible"
                    android:id="@+id/parent_3"
                    layout="@layout/item_search_parent"/>
        </LinearLayout>
        
    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:background="@color/mainColor"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="bottom"
            tools:text="완료"
    />

</FrameLayout>