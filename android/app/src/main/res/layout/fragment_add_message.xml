<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".community.AddMessageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="48dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/layout_edit_title" android:layout_marginStart="3dp">
            <ImageView
                    android:background="@drawable/ic_btn_back"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#111111"
                    android:lineSpacingExtra="7sp"
                    tools:text="이전"/>
        </LinearLayout>

        <LinearLayout
                app:layout_constraintBottom_toTopOf="@+id/button_edit_done"
                app:layout_constraintTop_toBottomOf="@+id/layout_edit_title"
                android:id="@+id/layout_edit_field"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:textColor="#111111"
                    android:lineSpacingExtra="5sp"
                    android:textColorHint="@color/selector"
                    android:hint="제목을 입력해주세요."/>
            <View
                    android:layout_width="match_parent"
                    android:background="@color/selector"
                    android:layout_height="1dp"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:background="@null"
                    android:textSize="16sp"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp"
                    android:textColor="#111111"
                    android:lineSpacingExtra="5sp"
                    android:textColorHint="@color/selector"
                    android:hint="내용을 입력해주세요."/>
        </LinearLayout>

        <Button
                android:id="@+id/button_edit_done"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:background="@color/mainColor"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="bottom"
                tools:text="완료" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>