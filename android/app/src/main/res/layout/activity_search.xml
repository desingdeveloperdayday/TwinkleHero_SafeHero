<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="35dp"
        android:layout_height="match_parent"
        tools:context=".monitoring.SearchActivity">

    <ImageView
            android:background="@drawable/ic_btn_back"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_search"
            app:layout_constraintBottom_toBottomOf="@+id/layout_search"
    />

    <androidx.appcompat.widget.SearchView
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            app:queryBackground="@null"
            app:iconifiedByDefault="false"
            app:searchIcon="@drawable/ic_btn_search"
            android:background="@null"
            android:layout_height="49dp"
            app:queryHint="도착지 검색"
            android:visibility="visible"
            android:layoutDirection="rtl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="50dp"/>

   <LinearLayout
           android:id="@+id/layout_tab"
           app:layout_constraintTop_toBottomOf="@+id/layout_search"
           android:weightSum="2"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="49dp">
       <TextView
               android:gravity="center"
               android:layout_weight="1"
               android:text="현위치"
               android:background="@drawable/rectangle_outline_gray_1dp"
               android:textSize="14sp"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"/>
       <TextView
               android:gravity="center"
               android:background="@drawable/rectangle_outline_gray_1dp"
               android:layout_weight="1"
               android:text="우리 집"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"/>
   </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layout_RecylerView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="597dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>