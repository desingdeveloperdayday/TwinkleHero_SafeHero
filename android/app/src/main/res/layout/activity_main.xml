<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#111111"
            android:lineSpacingExtra="8sp"
            android:textStyle="bold"
            android:text="@string/main_app_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout_address"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

    <LinearLayout
            android:id="@+id/layout_address"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp">
        <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/selector"
                android:lineSpacingExtra="8sp"
                android:text="성남시 서현동 123-4"
                app:layout_constraintTop_toBottomOf="@+id/text_title"
                app:layout_constraintStart_toStartOf="@id/text_address"
                app:layout_constraintEnd_toStartOf="@+id/layout_main"
                android:layout_marginStart="20dp"/>
        <ImageView
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/layout_main"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/layout_address"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
            android:background="@color/light_grey"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

        <LinearLayout
                android:id="@+id/layout_send_message"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="135dp">

            <TextView
                    android:id="@+id/text_frame_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="24dp"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:text="긴급 문자 보내기"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:textSize="12sp"
                    android:textColor="@color/selector"
                    android:text="엄마 외 2인에게 현위치가 전송됩니다."/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_call_police"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="135dp">
            <TextView
                    android:id="@+id/text_title_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="24dp"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:text="112 신고하기"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:textSize="12sp"
                    android:textColor="@color/selector"
                    android:text="동시에 보호자에게 위치가 전송됩니다."/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_call_me"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="135dp">
            <TextView
                    android:id="@+id/text_tile_call_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="24dp"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:text="나에게 전화걸기"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:textSize="12sp"
                    android:textColor="@color/selector"
                    android:text="전화를 받으면 녹음이 시작됩니다."/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            app:itemIconTint="@color/selector"
            app:itemTextColor="@color/selector"
            android:layout_height="wrap_content"
            android:background="@color/white"
            style="@style/BottomNavigationView2"
            app:menu="@menu/navigation"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>