<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/calling_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".calling.RecordActivity">
    <Chronometer
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:background="@color/balck"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:lineSpacingExtra="8sp"
            android:gravity="center"
            android:text="@string/calling_info_message"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/more_info"
            android:background="@drawable/img_more_btn"
            android:layout_width="16dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/timer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_caller"
            android:layout_marginRight="30dp"/>
    
    
    <TextView
            android:id="@+id/text_caller"
            android:text="@string/caller"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="68.5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:background="@drawable/img_fake_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/text_caller"
            app:layout_constraintBottom_toTopOf="@id/button_reject"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="100dp"/>

    <ImageView
            android:id="@+id/button_reject"
            android:background="@drawable/btn_end_call"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="178dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>